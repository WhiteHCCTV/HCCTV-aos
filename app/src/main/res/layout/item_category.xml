<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp">

        <ImageView
            android:id="@+id/categoryColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_circle_24"
            android:backgroundTint="@color/gray_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/categoryColor"
            app:layout_constraintStart_toEndOf="@+id/categoryColor"
            app:layout_constraintTop_toTopOf="@id/categoryColor"
            tools:text="배변" />

        <TextView
            android:id="@+id/secondTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@id/categoryColor"
            app:layout_constraintStart_toEndOf="@id/firstTextView"
            app:layout_constraintTop_toTopOf="@id/categoryColor"
            tools:text="80%" />

        <TextView
            android:id="@+id/thirdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/categoryColor"
            app:layout_constraintEnd_toStartOf="@id/fourthView"
            app:layout_constraintTop_toTopOf="@id/categoryColor"
            tools:text="3회" />

        <ImageButton
            android:id="@+id/fourthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:backgroundTint="@color/gray"
            app:layout_constraintBottom_toBottomOf="@id/categoryColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/categoryColor" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>